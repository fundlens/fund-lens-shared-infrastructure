# Azure Configuration
location    = "eastus"
environment = "production"

# PostgreSQL Configuration
postgres_admin_username = "cfadmin"
# postgres_admin_password = "SECURE_PASSWORD_HERE"  # Set via environment variable or GitHub Secret
postgres_sku_name       = "B_Standard_B1ms"  # ~$12-15/month
postgres_storage_mb     = 32768              # 32GB

# Network Security
# Get your IP: curl ifconfig.me
allowed_storage_ips = [
  # "203.0.113.1/32",  # Your home IP
  # "203.0.113.2/32",  # Your office IP
]

# Notes:
# - Copy this file to terraform.tfvars and fill in sensitive values
# - Never commit terraform.tfvars to git (it's in .gitignore)
# - For GitHub Actions, set these as secrets:
#   - TF_VAR_postgres_admin_password
#   - TF_VAR_allowed_storage_ips (as JSON array)